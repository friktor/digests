<div class="ui basic segment control">
	<div class="ui material segment">
		<div class="row">
			<div class="col-md-6"></div>
			<div class="col-md-6">
				<h3 class="ui header text-center"><%= __("Adding new Hab") %></h3>
				<div class="ui divider"></div>
				<div class="ui basic segment">
					<form action="/utils/hab/create" method="get" class="ui form add hab">

						<div class="name hab">
							<h4 class="ui header text-center"><%= __("Hab name") %></h4>
							<div class="ui input field">
								<input type="text" name="name_pl" placeholder="<%= __("The name of the hub on the %s", "polish") %>">
							</div>
							<div class="ui input field">
								<input type="text" name="name_ru" placeholder="<%= __("The name of the hub on the %s", "russian") %>">
							</div>
							<div class="ui input field">
								<input type="text" name="name_en" placeholder="<%= __("The name of the hub on the %s", "english") %>">
							</div>
						</div>

						<div class="hab desc">
							<h4 class="ui header text-center"><%= __("Hab description") %></h4>
							<div class="ui input field">
								<textarea name="desc_pl" placeholder="<%= __("The description of the hub on the %s", "polish") %>"></textarea>
							</div>
							<div class="ui input field">
								<textarea name="desc_ru" placeholder="<%= __("The description of the hub on the %s", "russian") %>"></textarea>
							</div>
							<div class="ui input field">
								<textarea name="desc_en" placeholder="<%= __("The description of the hub on the %s", "english") %>"></textarea>
							</div>
						</div>

						<div class="ui input">
							<input type="text" placeholder="<%= __("Heading image for hab. This is link to image.") %>" name="headerImg">
						</div>

						<div class="ui input">
							<input type="text" name="tags" placeholder="<%= __("Tags") %>">
						</div>

						<div class="text-center">
							<button type="submit" class="ui button submit">
								<%= __("submit") %>
							</button>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>