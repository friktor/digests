<!DOCTYPE html>
<html ng-app="main">
  <head>
    <title>
      <% if (typeof title !== "undefined") {%>
      <%= title %>
      <%} else {%>
      <%= sails.config.app.name %>
      <%};%>
    </title>

    <script>window.i18nLocale = "<%= req.getLocale() %>";</script>
    <script>window.usingModule = [
      "angular-capitalize-filter",
      "pascalprecht.translate",
      "ngMaterial",
      <% if (!session.auth) {%>
      "login"
      <%}%>
    ];</script>

    <%- meta("viewport", "width=device-width, initial-scale=1, maximum-scale=1") %>
    <%- meta("description", sails.config.app.description) %>
    <%- meta("keywords", sails.config.app.keywords) %>

    <%- style("/styles/importer.css") %>
    <%- script("/js/dependencies/jquery.min.js") %>
    <%- script("/stagging/semantic/modules/transition.min.js") %>
    <%- script("/stagging/semantic/modules/sidebar.min.js") %>
    
    <%- script("/libs/angular/angular.js") %>

    <%- partial("partials/angular-capitalize.ejs") %>
    <%- partial("partials/angular-translate.ejs") %>
    <%- partial("partials/angular-material.ejs") %>


    <% if (!session.auth) {%><%- script("/js/app/appLogin.js") %><%}%>
    <%- script("/js/app/app.js") %>

  </head>

  <body>
    <% "body content" %>
    <%- partial("partials/sidebar.left.ejs") %>
    <% if (!session.auth) {%>
    <%- partial("partials/sidebar.top.login.ejs")  %>
    <%}%>
    <div class="pusher">
      <%- body %>
    </div>
    <%- script("/js/dependencies/socket.io.min.js") %>
    <%- script("/js/dependencies/sails.io.js") %>
    <%- script("/js/initializationUi.js") %>
  </body>
</html>
