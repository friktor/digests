<script type="text/javascript" src="http://share.pluso.ru/pluso-like.js" async></script>
<script src="/stagging/jquery.hypher.js"></script>
<script src="/js/hPatterns/<%= post.locale %>.js"></script>

<script>
	window.postLocale = "<%= post.locale %>";
</script>

<script src="/js/app/appDetails.js"></script>

<div class="page details">
	<%- partial("../partials/menu.ejs") %>
	
	<div class="ui basic segment">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div class="ui segment post">
					<% var headerImg = _.find(post.headerImg, {"restrict": "full"}); %>
					<% if (headerImg) {%>
					<div class="post header image text center">
						<% if (session.auth && session.user.username === author.username) {%>
							<a href="/profile/<%= author.username %>/edit/<%= post.numericId %>">
								<i class="fa fa-pencil-square-o"></i> {{ 'edit' | translate}}
							</a>
						<%};%>
						<img src="<%= headerImg.link %>" alt="">
					</div>
					<%};%>

					<div class="post title">
						<h3 class="ui header"><%= post.title %></h3>
					</div>

					<div class="post info text center">
						<span class="views">
							<i class="fa fa-eye"></i> <%= __("%s views", post.showed) %>
						</span>
						<span class="createdDate">
							<i class="fa fa-calendar"></i> <%= __("added - %s", post.createdAt) %>
						</span>
						<span class="nofcomments">
							<i class="fa fa-comment"></i> 5 comments
						</span>
					</div>


					<div class="post habs text center">
						<i class="fa fa-rocket"></i> <% _.each(habs, function (hab, index) { %>
							<a href="/hab/<%= hab.translitName %>"><%= hab.name %></a><% if (index !== (habs.length-1)) {%>, <%}%>
						<% }); %>
					</div>
					
					<div class="text center">
						<div 
							data-description="<%= xss("" + (post.content.substr(0, 250)) + "...", {stripIgnoreTagBody: ['script'],stripIgnoreTag: true,whiteList: []}) %>" 
							data-title="<%= post.title %>" 
							data-url="http://digests.me/<%= post.numericId %>" 
							class="pluso" data-background="#ebebeb" 
							data-options="medium,round,line,horizontal,counter,theme=04" 
							data-services="vkontakte,facebook,twitter,google,email"
						></div>
					</div>

					<main class="post content">
						<%- post.content %>
					</main>

					<div class="post footer">
						<div class="ui basic segment">
							<div class="row">
								<div class="col-md-6 text left">
									<i class="fa fa-tags"></i> <% _.each(post.tags.split(/\s*,\s*/), function (tag, index) { %>
										<a href="/search?q=<%= tag %>&#38;by=tag"><%= tag %></a><% if (index !== (habs.length-1)) {%>, <%}%>
									<% }); %>
								</div>
								<div class="col-md-6 text right">
									<a href="/profile/<%= author.username %>" class="ui avatar image">
									<% var avatarImg = _.find(session.user.avatarImg, {"restrict": "preview"}); %>
									<img src="<% if (session.user.avatarImg.length>0) {%><%= avatarImg.link %><%} else {%>/images/avatar.png<%}%>" alt="">
									</a>
									<a href="/profile/<%= author.username %>">
										<%= author.firstname %> <%= author.lastname %>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-2"></div>
		</div>
	</div>

</div>

<%- partial("../partials/footer.ejs") %>